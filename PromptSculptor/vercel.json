{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/favicon.ico",
      "destination": "/public/favicon.ico"
    },
    {
      "source": "/app/(.*)",
      "destination": "/public/index.html"
    },
    {
      "source": "/app",
      "destination": "/public/index.html"
    },
    {
      "source": "/",
      "destination": "/public/landing.html"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/public/index.html"
    }
  ]
}